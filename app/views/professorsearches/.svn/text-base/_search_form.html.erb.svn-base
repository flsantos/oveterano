    <% content_for :stylesheets do %>
    	<%= stylesheet_link_tag 'jquery.autocomplete' %>
    <% end %>
    
    <% content_for :javascripts do %>

          <%= javascript_include_tag 'jquery.autocomplete' %>


        <script type="text/javascript">

            jQuery(document).ready( function(){
                    jQuery('#professorsearch_nome').autocomplete("/professorsearch.js", {selectFirst:false, delay:0});
            });

        </script>


    <% end %>

        <% remote_form_for :professorsearch, @professorsearch, :url => { :action => "create"}, :html => {:onsubmit => "jQuery('.ac_results').css('display', 'none');"} do |f| %>
              <%= f.error_messages %>
                <div id="SearchProfFormOut">
                        <div id="SearchProfForm">
                            <%= f.text_field :nome, :autocomplete => "off", :value => " Nome, departamento, disciplina...", :onfocus => "if (this.value == ' Nome, departamento, disciplina...'){ this.value='';}", :onblur => "if (this.value == '') { this.value = ' Nome, departamento, disciplina...'}" %>
                            <%= image_submit_tag "button_search.png", :onclick => "jQuery('#SearchProfFormOut').append(\"<div id='indicator' style='text-align:center;'><img src='../images/indicator.gif' /></div>\");" %>
                        </div>
                </div>
                <div id="help_link" style="margin-left:745px; margin-right:5px;">
					<a rel="facebox" href="#professor_ajuda" title="Como procurar por professores?" style="text-decoration:none;">
                      <div id="botao_buscar" class="shadow_botao" style="width:33px; height:26px; background-color:#F1B80A; color:white; font-size:24px; border:1px solid #C79809; -moz-border-radius:5px; -webkit-border-radius: 5px; border-radius: 5px; padding-top:5px;text-align:center;">
                        ?
                      </div>
                    </a>
				</div>
        <% end %>
        
        <%= render :partial => 'professorsearches/professor_ajuda' %>


