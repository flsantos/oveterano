<h1>Listing posts</h1>

<table>
  <tr>
    <th>Mensagem</th>
    <th>Alias</th>
    <th>Alias</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=h post.mensagem %></td>
    <td><%=h post.alias %></td>
    <td><%=h post.alias_id %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>