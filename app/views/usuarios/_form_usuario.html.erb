<% form_for (@usuario) , :html => { :multipart => true } do |f| %>
			<!--<% flash.each do |name, msg| %>
	   		    <%= content_tag :div, msg, :id => "flash_#{name}" %>
	 		<% end %>-->
			<% if f.error_messages.any? %>
				<div id="flash_error">
					<p> <%= error_messages_for :usuario, :header_message => "", :message => "" %> </p>
				</div>
			<% end %>
			
			<ul><li>
				<%= f.label :nome, 'Nome: ' %>
				<%= f.text_field :nome%>
			</li></ul>
			
			<ul><li>
				<%= f.label :email, 'Email: ' %>
				<%= f.text_field :email %>
			</li></ul>
			
			<ul><li>
				<%= f.label :password, 'Senha: ' %>
				<%= f.password_field :password %>
			</li></ul>
			
			<ul><li>
				<%= f.label :password_confirmation, 'Confirme a Senha: ' %>
				<%= f.password_field :password_confirmation %>
			</li></ul>
			
			<ul><li>
				<div id="confirmacao">
					<%= check_box_tag(:confirmacao) %>
					<%= label_tag(:confirmacao, "Li e aceito os ") %>
					<a rel="facebox" href="#termos_de_uso_box" title="Termos de Uso">Termos de Uso</a><br/>
				</div>
			</li></ul>
	
			<ul><li>
				<div style="width:200px; margin:auto; padding-left:100px; margin-top:10px;"><a href="#cod_ativacao_nao_rec" rel="facebox">Não recebi o código de ativação</a></div>
				<div id="cod_ativacao_nao_rec" style="display:none;">
					<div class="box bg" style=" width:400px;">
						<div class="titulo"> Confirmação de cadastro </div>
						<div style="margin:20px;">Caso você já tenha se cadastrado e não recebeu o código de ativação, informe somente o seu email no formulário de cadastro e clique em Enviar para que um novo email de confirmação lhe seja reenviado.</div>
					</div>
				</div>
			</li></ul>
	
			<div id="button_enviar" class="shadow_botao">
				<%= image_submit_tag "botao_enviar2.png",:width => "77px", :height => "27px" %>
			</div>
			
	<% end %>