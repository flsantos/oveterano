	
<div class="box bg">
          <div class="titulo">Entrar</div>
          <div id="login_form">
                <p> Ainda nÃ£o possui uma conta? cadastre-se <%= link_to "aqui", signup_path, { :title => "Crie sua conta" } %> </p>
                <div id="form_login">
                      <!--Essa div receberÃ¡ as mensagens de erro caso existam via jQuery -->
                      <div class="error_message flash_error" id="msg_erro_login">
                      </div>

                      <% form_tag :controller => "sessions", :action => "create_2" do %>
                          <p><%= label_tag 'Email: ' %><br/>
                            <%= text_field_tag 'login_email'%></p>

                          <p><%= label_tag 'Senha: ' %><br/>
                            <%= password_field_tag 'login_password' %></p>

						  <p><%= link_to "Esqueceu sua senha?", :controller => "usuarios", :action => "recuperar" %></p>

                          <p><%= label_tag 'remember_me', 'Lembrar-me' %>
                            <%= check_box_tag 'remember_me', '1', @remember_me %></p>

                          <div id="button_entrar" class="shadow_botao">
                              <%= image_submit_tag "botao_entrar2.png", :width => "77px", :height => "27px" %>
                          </div>
                      <% end %>
                </div>
          </div>
    </div>
